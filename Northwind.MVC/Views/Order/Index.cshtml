
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-12 d-none" id="orderCard">
        <div class="card">
            <div class="card-body">
                <div class="d-flex col-md-12 justify-content-between">
                    <h1 id="orderIdValue"></h1>
                    <h1 id="orderDateValue"></h1>
                </div>
                <h1 class="col-md-12">Sipariş Detayları</h1>
                <p class="lead" id="orderProductDetail"></p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ProductId</th>
                            <th>UnitPrice</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="productBody">

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <table class="table table-hover" id="orderTable">
            <thead>
                <tr>
                    <th>OrderId</th>
                    <th>OrderDate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="orderBody">

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="/js/order.js"></script>
}

